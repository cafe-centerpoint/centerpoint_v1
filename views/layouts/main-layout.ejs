    <title>Cafe Center Point </title>
    <style>
      /* Navbar */
      .navbar-brand {
          font: 32px Viga;
      }

      .kebawah {
        position: fixed;
      }

      .kinoy ul li {
        display: flex;
        flex-direction: column;
        background-color: orange;
        margin-top: 5px;
        padding: 3px 13px;
        font-size: small;
        font-weight: bold;
        cursor: pointer;
      }

      .kinoy ul li:hover {
        color: white;
      }

      .kinoy a {
        text-decoration: none;
      }

      /* Jumbotron */
      .jumbotron {
          background: url(/images/pexels-chan-walrus-958545.jpg);
          background-size: cover;
          height: 400px;
          position: relative;
          z-index: -1;
          margin-bottom: 0;
      }

      .jumbotron::after {
          content: '';
          display: block;
          position: absolute;
          width: 100%;
          height: 50%;
          background-image: linear-gradient(to top, rgba(0,0,0,1), rgba(0,0,0,0));
          bottom: 0;
      }

      .jumbotron .container {
          color: white;
          text-align: center;
          position: relative;
          z-index: 1;
      }

      .jumbotron .display-4 {
          font-size: smaller;
          margin-top: 7px;
          text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
          margin-bottom: 13px;
          background-color: rgba(74, 85, 95, 0.637);
          padding: 10px 10px;
          border-radius: 40px;
      }

      /* Utility */
      .tombol {
          border-radius: 40px;
          font-size: medium;
      }

      /* others */
      .paket, .chat {
        font-size: medium;
      }

      .paket span {
        color: gray;
      }


      .chat a button {
        background-color: green;
        color: honeydew;
        border: none;
        padding: 7px 13px;
        border-radius: 10px;
      }

      footer {
        background-color: rgba(0, 0, 0, 0.671);
        color: snow;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 25px;
      }

      footer h3 {
        font-size: large;
        font-weight: bold;
      }

      footer p {
        text-align: center;
        font-size: small;
      }

      /* RESPONSIVE */
      @media (min-width: 992px) {
          .navbar {
              padding-top: 20px;
          }
          
          .navbar-brand {
              color: navy !important;
              background-color: rgba(197, 207, 152, 0.52);
              padding: 2px 15px;
              text-shadow: 3px 1px 2px rgba(0, 0, 128, 0.246);
          }

          .nav-link {
              text-transform: uppercase;
              margin-right: 20px;
              font-size: 18px !important;
              background-color: rgba(0, 0, 0, 0.5);
              color: white !important;
          }

          .nav-link:hover::after,
          .nav-link.active::after {
              content: '';
              display: block;
              border-bottom: 3px solid white;
              margin: auto;
              margin-bottom: -8px;
              width: 50%;
              padding-top: 2.5px;
          }

          .kupon {
            position: relative;
            background-color: black;
            color: white;
            border: skyblue;
            font-size: small;
          }

          .kupon:hover {
            color: white !important;
          }
          
          .info {
            font-family: sans-serif;
            font-size: medium;
          }

          .paket {
            font-size: x-large;
            font-weight: normal;
          }

          .paket span {
            font-size: large;
            font-weight: lighter;
          }

          .chat a button {
            background-color: green;
            color: white;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: large;
            padding: 9px;
            font-weight: bolder;
          }

          .jumbotron {
              color: white;
              margin-top: -90px;
              height: 640px;
          }

          .jumbotron .display-4 {
              margin-top: 50px;
              padding-bottom: 15px;
              margin-bottom: 30px;
              font-size: medium;
          }

          .jumbotron a {
            cursor: pointer;
          }

          .tombol {
            font-size: xx-large;
          }


          .workingspace {
              text-align: left;
          }


          .testimonial p {
              font-size: 2em;
          }

          footer {
            background-color: black;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 25px
          }

          footer span {
            line-height: 1px;
          }

          footer h6 {
            color: lightgray;
          }

      }

    </style>
  </head>
